    tools:showIn="@layout/app_bar_main2">

    <Spinner
        android:id="@+id/spn_cidade"
        android:layout_width="368dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_servicos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar serviÃ§os em"
        android:layout_above="@+id/spn_cidade"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/bt_buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_search"
        android:onClick="actionCadastroList"
        android:layout_below="@+id/spn_cidade"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
